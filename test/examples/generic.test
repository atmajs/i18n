UTest.cfg({
	timeout: 5000
});

UTest({
	'simple: en': function(done){
		check('en', 'Hello', done);
	},
	'simple: de': function(done){
		check('de', 'Hallo', done);
	},
	'simple: ru': function(done){
		check('ru', 'Привет', done);
	}
})

function check(lang, expect, done){
	UTest
		.server
		.request('/examples/simple.html?language=' + lang)
		.fail(assert.avoid())
		.done(function(doc){
			
			$(doc)
				.has_('text', expect);
				
			done();
		})
}